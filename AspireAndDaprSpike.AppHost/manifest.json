      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "microservice02-dapr": {
      "type": "dapr.v0",
      "dapr": {
        "application": "microservice02",
        "appId": "microservice02",
        "components": [
          "config-store-2",
          "state-store-2"
        ]
      }
